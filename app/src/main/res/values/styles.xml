<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/material_green_500</item>
        <item name="colorPrimaryDark">@color/material_green_700</item>
        <item name="colorAccent">@color/material_yellow_a200</item>
    </style>

    <style name="spinnerItemStyle">
        <item name="android:padding">10dp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>



    <style name="GreenButtonTheme" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/colorAccentDark</item>
        <item name="colorButtonNormal">@color/colorAccentre</item>
        <item name="android:textColorPrimary">@color/white_primary_text</item>
    </style>

    <style name="GreenButton">
        <item name="android:theme">@style/GreenButtonTheme</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>




    <style name="LayoutMatchParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="LayoutWrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LayoutFillParent">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="LayoutMatchParent.Vertical">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ComponentLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="DefaultLayout" parent="LayoutMatchParent.Vertical">
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:clickable">false</item>
        <item name="android:descendantFocusability">beforeDescendants</item>
        <item name="android:padding">@dimen/layout_padding</item>
        <item name="android:background">@drawable/layout_bg</item>
    </style>

    <style name="ScrollableLayout" parent="LayoutMatchParent">
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:clickable">false</item>
        <item name="android:descendantFocusability">beforeDescendants</item>
        <item name="android:background">@drawable/layout_bg</item>
    </style>

    <style name="WhiteSpaceHorizontal">
        <item name="android:layout_width">@dimen/layout_padding</item>
        <item name="android:layout_height">@dimen/line</item>
    </style>

    <style name="WhiteSpaceVertical">
        <item name="android:layout_width">@dimen/line</item>
        <item name="android:layout_height">@dimen/layout_padding</item>
    </style>

    <style name="YellowButtonTheme" parent="Theme.AppCompat.Light">
