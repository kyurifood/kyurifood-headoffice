<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/DefaultLayout"
    tools:context="com.artivisi.android.kyurifood.headoffice.fragments.LaporanFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">
        <TextView style="@style/Text.Headline.Black"
            android:padding="@dimen/layout_padding"
            android:gravity="center"
            android:text="Pesanan"/>
        <Button
            style="@style/AmberButton"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Produk"
            android:id="@+id/btnProduk" />
        <Button
            style="@style/BlueButton"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Marketer"
            android:id="@+id/btnMarketer" />
        <Button
            style="@style/GreenButton"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Distributor"
            android:id="@+id/btnDistributor" />
        <Button
            style="@style/RedButton"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Penjualan"
            android:id="@+id/btnPenjualan" />
    </LinearLayout>

</LinearLayout>
    </ScrollView>
