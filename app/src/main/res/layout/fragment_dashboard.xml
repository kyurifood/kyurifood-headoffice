<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/DefaultLayout"
    android:gravity="center"
    tools:context="com.artivisi.android.kyurifood.headoffice.fragments.DashboardFragment">

    <LinearLayout style="@style/ComponentLayout"
        android:orientation="horizontal"
        android:layout_weight="1">
        <LinearLayout style="@style/ComponentLayout"
            android:background="@color/material_blue_600"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageView
                style="@style/LayoutMatchParent"
                android:padding="@dimen/layout_padding"
                android:src="@drawable/mn_product"/>
            <TextView style="@style/Text.Title.White"
                android:gravity="center"
                android:background="@color/black_transparent"
                android:text="Produk"/>
        </LinearLayout>
        <View style="@style/WhiteSpaceHorizontal" />
        <LinearLayout style="@style/ComponentLayout"
            android:background="@color/material_deep_orange_600"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageView
                style="@style/LayoutMatchParent"
                android:padding="@dimen/layout_padding"
                android:src="@drawable/mn_regional"/>
            <TextView style="@style/Text.Title.White"
                android:gravity="center"
                android:background="@color/black_transparent"
                android:text="Regional"/>
        </LinearLayout>
    </LinearLayout>
    <View style="@style/WhiteSpaceVertical" />
    <LinearLayout style="@style/ComponentLayout"
        android:orientation="horizontal"
        android:layout_weight="1">
        <LinearLayout style="@style/ComponentLayout"
            android:background="@color/material_amber_600"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageView
                style="@style/LayoutMatchParent"
                android:padding="@dimen/layout_padding"
                android:src="@drawable/mn_distributor"/>
            <TextView style="@style/Text.Title.White"
                android:gravity="center"
                android:background="@color/black_transparent"
                android:text="Distributor"/>
        </LinearLayout>
        <View style="@style/WhiteSpaceHorizontal" />
        <LinearLayout style="@style/ComponentLayout"
            android:background="@color/material_teal_600"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageView
                style="@style/LayoutMatchParent"
                android:padding="@dimen/layout_padding"
                android:src="@drawable/mn_marketer"/>
            <TextView style="@style/Text.Title.White"
                android:gravity="center"
                android:background="@color/black_transparent"
                android:text="Marketer"/>
        </LinearLayout>
    </LinearLayout>
    <View style="@style/WhiteSpaceVertical" />
    <LinearLayout style="@style/ComponentLayout"
        android:orientation="horizontal"
        android:layout_weight="1">
        <LinearLayout style="@style/ComponentLayout"
            android:background="@color/material_red_600"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageView
                style="@style/LayoutMatchParent"
                android:padding="@dimen/layout_padding"
                android:src="@drawable/mn_order"/>
            <TextView style="@style/Text.Title.White"
                android:gravity="center"
                android:background="@color/black_transparent"
                android:text="Pesanan"/>
        </LinearLayout>
        <View style="@style/WhiteSpaceHorizontal" />
        <LinearLayout style="@style/ComponentLayout"
            android:background="@color/material_brown_600"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageView
                style="@style/LayoutMatchParent"
                android:padding="@dimen/layout_padding"
                android:src="@drawable/mn_report"/>
            <TextView style="@style/Text.Title.White"
                android:gravity="center"
                android:background="@color/black_transparent"
                android:text="Laporan"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
