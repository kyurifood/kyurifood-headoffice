<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/DefaultLayout"
    tools:context="com.artivisi.android.kyurifood.headoffice.fragments.PengaturanFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">
        <TextView style="@style/Text.Headline.Black"
            android:padding="@dimen/layout_padding"
            android:gravity="center"
            android:text="Pengaturan"/>
        <Button
            style="@style/AmberButton"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="GANTI PASSWORD"
            android:id="@+id/btn_gantipassword" />

        <Button
            style="@style/GreenButton"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="INFO PRIBADI"
            android:id="@+id/btn_info" />
    </LinearLayout>

</LinearLayout>
